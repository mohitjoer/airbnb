<% layout('layout/boilerplate') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Post new property:</h3>
            <br>
            <form novalidate class="needs-validation" method="post" action="/listings">
                <div class="mb-3"> 
                    <label for="title" class="form-label">Title</label>
                    <input id="title" name="listing[title]" type="text" placeholder="Enter Title" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="listing[description]" class="form-control" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input id="image" name="listing[image]" type="text" placeholder="Enter Image URL" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input id="price" name="listing[price]" type="number" placeholder="Enter Price" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country</label>
                        <input id="country" name="listing[country]" type="text" placeholder="Enter Country" class="form-control" required>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input id="location" name="listing[location]" type="text" placeholder="Enter Location" class="form-control" required>
                    </div>
                </div>
                <button class="btn btn-dark add-btn">Add</button>
            </form>
            <br>
        </div>
    </div>
</body>
