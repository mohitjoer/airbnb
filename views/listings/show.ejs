<% layout('layout/boilerplate') %>
<body>

    <div class="row">
        <div class="col-8 offset-2">
            <h3><b> <%= list.title %> </b> </h3>
        </div>
            <div class="card col-6 offset-3 show-card" style="width: 20rem;">
                <img src="<%= list.image%>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                <p class="card-text">
                    <br>
                    <%= list.description %> <br>
                    $<%= list.price.toLocaleString("en-US") %> <br>
                    <%= list.location %>,
                    <%= list.country %>
                </p>
                </div>
                <br></br>


                <div class="btns">
                    <a href="/listings/<%= list._id %>/edit"><button class="btn btn-dark offset-2 edit-btn ">Edit</button></a>
              
                    <form method="post" action="/listings/<%= list._id %>?_method=delete">
                        <button class="btn btn-dark offset-5">Delete</button>
                    </form>
                </div>
            </div>

           
        
    </div>
</body>
