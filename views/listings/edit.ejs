<% layout('layout/boilerplate') %>
<body>
    <div class="row  mt-3">
        <div class="col-8 offset-2">
            <h3>Edit details :</h3>
            <form method="post" action="/listings/<%= list._id%>?_method=put">
                <div class="mb-3"> 
                    <label for="Title" class="form-label">Title</label>
                    <input  name="list[title]" type="text" value="<%= list.title %>" class="form-control">
                </div>
                <div class="mb-3"> 
                    <label for="Description" class="form-label">Description</label>
                    <textarea name="list[description]" class="form-control"><%= list.description %></textarea>
                </div>
                <div class="mb-3"> 
                    <label for="Image" class="form-label">Image URL</label>
                    <input  name="list[image]" type="text" class="form-control" value="<%= list.image %>">
                </div>
                <div class="mb-3"> 
                    <label for="Price" class="form-label">Price</label>
                    <input name="list[price]"  type="number" class="form-control" value="<%= list.price %>">
                </div>
                <div class="row">
                    <div class="mb-3  col-md-4"> 
                        <label for="Country" class="form-label">Country</label>
                        <input  name="list[country]" type="text" class="form-control" value="<%= list.country %>">
                    </div>
                    <div class="mb-3  col-md-8"> 
                        <label for="Location" class="form-label">Location</label>
                        <input  name="list[location]" type="text" class="form-control" value="<%= list.location %>">
                    </div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
</body>
