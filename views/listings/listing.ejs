<% layout('layout/boilerplate') %>
<body>
    <h3>list of property</h3>
   <!-- <form method="get" action="/listings/new">
        <button>create new listing</button>
    </form>-->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let l of list) { %>
        <a href="/listings/<%= l._id%>">
            <div class="card col" style="width: 20rem;">
                <img src="<%= l.image%>" class="card-img-top" alt="..." style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                <p class="card-text">
                    <b> <%= l.title %> </b><br>
                    $<%= l.price.toLocaleString("en-US") %> /Night  <br>
                    <%= l.location %>,<%= l.country %>
                </p>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</body>
